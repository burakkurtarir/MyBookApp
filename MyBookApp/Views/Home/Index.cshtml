@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<hr />
<h2>Home Page</h2>
<hr />

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@TempData["AlertType"] alert-dismissible show" role="alert">
        <strong>@TempData["AlertTitle"]!</strong> @TempData["AlertMessage"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@*<h2>@Context.User.Identity.Name</h2>
<h2>@Context.User.Claims.FirstOrDefault(u => u.Type == "UserId").Value</h2>*@

<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="div-book">
                <img src="@item.ImageUrl" style="width:50%; height:50%; margin-bottom:10px;" />
                <p><strong>Kitap:</strong> @item.Name</p>   
                <p><strong>Yazar:</strong> @item.Author</p>
                <p><strong>Kategori:</strong> @item.bookCategory.Name</p>
                <a asp-action="BuyBook" asp-route-id="@item.Id" class="btn btn-default">Satın Al</a>
            </div>
        </div>
    }
</div>

