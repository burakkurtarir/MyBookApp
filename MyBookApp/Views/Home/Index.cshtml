@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<hr />
<h2>Home Page</h2>
<hr />

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@TempData["AlertType"] alert-dismissible show" role="alert">
        <strong>@TempData["AlertTitle"]!</strong> @TempData["AlertMessage"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div style="padding:8px;">
                <img src="@item.ImageUrl" style="width:50%; height:50%; margin-bottom:10px;" />
                <p>Kitap: @item.Name</p>
                <p>Yazar: @item.Author</p>
                <p>Kategori: @item.bookCategory.Name</p>
                <a asp-action="BuyBook" asp-route-id="@item.Id" class="btn btn-default">Satın Al</a>
            </div>
        </div>
    }
</div>

