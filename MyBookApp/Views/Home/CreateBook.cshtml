@model AddBookViewModel
@{
    ViewData["Title"] = "Create Book";
 }

<h2>Create Book</h2>
<div class="container">
    <div class="row">
        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookImageUrl" class="control-label"></label>
                <input asp-for="BookImageUrl" class="form-control" />
                <span asp-validation-for="BookImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDescription" class="control-label"></label>
                <input asp-for="BookDescription" class="form-control" />
                <span asp-validation-for="BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthor" class="control-label"></label>
                <input asp-for="BookAuthor" class="form-control" />
                <span asp-validation-for="BookAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookStock" class="control-label"></label>
                <input asp-for="BookStock" class="form-control" type="number" />
                <span asp-validation-for="BookStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookPrice" class="control-label"></label>
                <input asp-for="BookPrice" class="form-control" type="number" />
                <span asp-validation-for="BookPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="BookCategoryId" asp-items="Model.BookCategories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Book" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Back to List</a>

